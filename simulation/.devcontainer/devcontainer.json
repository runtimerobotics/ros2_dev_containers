{
    "name": "ROS 2 Jazzy Simulation Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "false",
            "installOhMyZsh": "false",
            "upgradePackages": "true",
            "username": "ros",
            "uid": "1000",
            "gid": "1000"
        },
        "ghcr.io/devcontainers/features/apt-get:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "ms-vscode.ros",
                "redhat.vscode-yaml",
                "ms-python.python",
                "EditorConfig.EditorConfig"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "cmake.configureSettings": {
                    "CMAKE_BUILD_TYPE": "Release"
                },
                "ros.distro": "jazzy"
            }
        }
    },
    "remoteUser": "ros",
    // Commands to run after the container is created and VS Code connects.
    // Formatted as a single line to prevent potential JSON parsing issues with multiline strings and backslashes.
    "postCreateCommand": "bash -c \"sudo apt-get update && sudo apt-get install -y build-essential cmake git python3-pip python3-rosdep python3-colcon-common-extensions gazebo && sudo rm -rf /var/lib/apt/lists/* && source /opt/ros/jazzy/setup.bash && rosdep update && rosdep install --from-paths /workspaces/simulation/src --ignore-src -r -y && colcon build --symlink-install --cmake-args -DCMAKE_BUILD_TYPE=Release\"",
    "forwardPorts": [],
    "workspaceFolder": "/workspaces/simulation",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspaces/simulation,type=bind,consistency=cached"
    ]
}